{% extends 'base_admin.html.twig' %}

{% block body %}


{% include("admin/admin_header.html.twig") %}
{% include("admin/admin_aside.html.twig") %}

    <section id="main-content">
      <section class="wrapper">
        <div class="row">
          <div class="col-lg-12">
            <h3 class="page-header"><i class="fa fa-file-text-o"></i> All Cars</h3>

            <ol class="breadcrumb">
              <li><i class="fa fa-home"></i><a href="{{path('admin_home_page')}}">Admin</a></li>
              <li><i class="icon_document_alt"></i>Cars</li>
              <li><i class="fa fa-file-text-o"></i>List</li>
              <li><a href="{{ path('gb_car_new') }}">Add a new car</a></li>
              <li><a href="{{ path('gb_car_deleted_index') }}">List Deleted Cars</a></li>
            </ol>
          </div>
        </div>

        <div class="row">
          <div class="col-lg-12">
            <section class="panel">
              <header class="panel-heading">
                List of all cars
              </header>

              <table class="table table-striped table-advance table-hover">
                <tbody>
                  <tr>
                    <th><i class="icon_profile"></i> Make</th>
                    <th><i class="icon_calendar"></i> Model</th>
                    <th><i class="icon_mail_alt"></i> Body Style</th>
                    <th><i class="icon_pin_alt"></i> Mileage</th>
                    <th><i class="icon_mobile"></i> Eng Cap</th>
                    <th><i class="icon_cogs"></i> Price</th>
                    <th><i class="icon_cogs"></i> Transition</th>
                    <th><i class="icon_cogs"></i> Ext Color</th>
                    <th><i class="icon_cogs"></i> Manage</th>
                  </tr>
                  {% for gB_car in gB_cars %}
                  <tr>
                    <td>{{gB_car.cMake}}</td>
                    <td>{{gB_car.cModel}}</td>
                    <td>{{gB_car.cBodyStyle}}</td>
                    <td>{{gB_car.cMileage}}</td>
                    <td>{{gB_car.cEngCap}}</td>
                    <td>{{gB_car.cPrice}}</td>
                    <td>{{gB_car.cTrans}}</td>
                    <td>{{gB_car.cExtColor}}</td>
                    <td>
                      <div class="btn-group">
                        <a class="btn btn-primary" href="{{ path('gb_car_show_admin', { 'id': gB_car.id }) }}"><i class="icon_zoom-in_alt"></i></a>
                        <a class="btn btn-success" href="{{ path('gb_car_edit', { 'id': gB_car.id }) }}"><i class="icon_pencil-edit"></i></a>
                        <a class="btn btn-danger" href="{{ path('gb_car_delete', {'id': gB_car.id })}}"><i class="arrow_condense_alt"></i></a>
                      </div>
                    </td>
                  </tr>
                  {% endfor %}
                </tbody>
              </table>
            </section>
          </div>
        </div>





      </section>
    </section>

{% endblock %}
