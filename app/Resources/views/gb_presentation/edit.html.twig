{% if is_granted('ROLE_ADMIN') %}

{% extends 'base_admin.html.twig' %}

{% block body %}


{% include("admin/admin_header.html.twig") %}
{% include("admin/admin_aside.html.twig") %}

<section id="main-content">
    <section class="wrapper">
        <div class="row">
            <div class="col-lg-12">
            <h3 class="page-header"><i class="fa fa-file-text-o"></i> View Car</h3>
            <ol class="breadcrumb">
                <li><i class="fa fa-home"></i><a href="{{path('admin_home_page')}}">Admin</a></li>
                <li><i class="icon_document_alt"></i>Presentation</li>
                <li><i class="fa fa-file-text-o"></i>Edit for {{car.cMake}} {{car.cModel}}</li>
            </ol>
            </div>
        </div>

        <div class="row">

        <div class="col-md-12 col-sm-12 col-md-12">
            <div class="panel-body">
                <div id="errormessage"></div>

                {{ form_start(edit_form, {'attr': {'class': 'contactForm lead', 'id': 'purchace_form', 'role': 'form'}}) }}

                <div class="row">
                    <div class="col-xs-6 col-sm-6 col-md-6">
                        <div class="form-group">
                        <label for="sel1">Image:</label>
                        {{ form_widget(edit_form.pPhotoPath) }}
                        {{ form_errors(edit_form.pPhotoPath, { 'attr': {'class': 'validation'}} ) }}
                        </div> 
                    </div> 

                </div>

                <div class="row">
                    <div class="col-xs-6 col-sm-6 col-md-6">
                        <div class="form-group">
                        <label for="sel1">Description:</label>
                        {{ form_widget(edit_form.pDescription) }}
                        {{ form_errors(edit_form.pDescription, { 'attr': {'class': 'validation'}} ) }}
                        </div> 
                    </div> 

                    <div class="col-xs-6 col-sm-6 col-md-6">
                        <img src="{{gB_presentation.getPPhotoPath}}" style="width:100%;" />
                    </div> 

                </div>

                <input type="submit" value="Edit" class="btn btn-skin btn-lg">

                {{ form_end(edit_form) }}
            </div>
        </div>

        </div>

        <ul>
            <li>
                <a href="{{ path('gb_presentation_index') }}">Back to the list</a>
            </li>
        </ul>


     </section>
  </section>
      
{% endblock %}
{% endif %}