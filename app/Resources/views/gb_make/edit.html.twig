{% extends 'base_admin.html.twig' %}

{% block body %}
{% include("admin/admin_header.html.twig") %}
{% include("admin/admin_aside.html.twig") %}

    <!--main content start-->
    <section id="main-content">
      <section class="wrapper">
        <div class="row">
          <div class="col-lg-12">
            <h3 class="page-header"><i class="fa fa fa-bars"></i> {{ gB_make.mName }}</h3>
            <ol class="breadcrumb">
              <li><i class="fa fa-home"></i><a href="{{path('admin_home_page')}}">Home</a></li>
              <li><i class="fa fa-bars"></i><a href="{{path('gb_make_index')}}">List All Makes</a></li>
            </ol>
          </div>
        </div>
        <!-- page start-->
            {{ form_start(edit_form, {'attr': {'class': 'contactForm lead', 'id': 'purchace_form', 'role': 'form'}}) }}

            <div class="row">
                <div class="col-xs-6 col-sm-6 col-md-6">
                <div class="form-group">
                <label for="sel1">Make:</label>
                {{ form_widget(edit_form.mName, { 'attr': {'placeholder': 'Car Make'|trans, 'class': 'form-control' }}) }}
                {{ form_errors(edit_form.mName, { 'attr': {'class': 'validation'}} ) }}
                </div> 
                </div> 

            </div>

            <input type="submit" value="Edit" class="btn btn-skin btn-lg">

            {{ form_end(edit_form) }}

    <ul>
        <li>
            <a href="{{ path('gb_make_index') }}">Back to the list</a>
        </li>
    </ul>


        <!-- page end-->
      </section>
    </section>
    <!--main content end-->

{% endblock %}
