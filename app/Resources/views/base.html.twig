    </head>
    <body id="page-top" data-spy="scroll" data-target=".navbar-custom">
        {% block body %}
        
   
        {% endblock %}
        
        <!-- Core JavaScript Files -->
        <script src="{{ asset('js/jquery.min.js')}}"></script>
        <script src="{{ asset('js/bootstrap.min.js')}}"></script>
        <script src="{{ asset('js/jquery.easing.min.js')}}"></script>
        <script src="{{ asset('js/wow.min.js')}}"></script>
        <script src="{{ asset('js/jquery.scrollTo.js')}}"></script>
        <script src="{{ asset('js/jquery.appear.js')}}"></script>
        <script src="{{ asset('js/stellar.js')}}"></script>
        <script src="{{ asset('plugins/cubeportfolio/js/jquery.cubeportfolio.min.js')}}"></script>
        <script src="{{ asset('js/owl.carousel.min.js')}}"></script>
        <script src="{{ asset('js/nivo-lightbox.min.js')}}"></script>
        <script src="{{ asset('js/custom.js')}}"></script>
        {# <script src="{{ asset('js/jquery.matchHeight-min.js')}}"></script> #}

        {% block javascripts %}
        
        {% endblock %}

        <script>
            $( "#search_input" ).keyup(function( event ) {
            var search_text = $(this).val();
            $("#listGroup").text("Loading...");
            $.ajax({
                url:'{{ (path('search_cars')) }}',
                type: "POST",
                dataType: "json",
                data: {
                    "search_text": search_text,
                },
                async: true,
                success: function (data)
                {
                    $( "#listGroup" ).empty();
                    if (search_text == ""){
                    $( "#listGroup" ).empty();
                    } else {
                    $.each(data, function( index, value ) {

                    $("#listGroup").append(
                    '<a class="list-group-item active" target="blank"  style="z-index:1000; background-color: #a81528!important; min-width: 200px;" href="#cbp=' + value[5] + '">' +
                        '<h6 class="list-group-item-heading">' + value[0]  + ' ' + value[1] + '</h6>' +
                        '<p class="list-group-item-text">Kes ' + value[2] + ' | ' + value[3] + ' | ' + value[4] + ' Km.</p>' +
                    '</a>');
                    });  
                    }         
                },
                error: function (xhr, status, error) {
                    console.log('error');
                }
            });

            });
        </script>

        <script>
            $( "#to_reload" ).on( "click", function() {
                location.reload();
            });

        </script>

    </body>
</html>
