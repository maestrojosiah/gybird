{% extends 'base_admin.html.twig' %}

{% block body %}
{% include("admin/admin_header.html.twig") %}
{% include("admin/admin_aside.html.twig") %}

    <!--main content start-->
    <section id="main-content">
      <section class="wrapper">
        <div class="row">
          <div class="col-lg-12">
            <h3 class="page-header"><i class="fa fa fa-bars"></i> {{ gB_model.mdName }}</h3>
            <ol class="breadcrumb">
              <li><i class="fa fa-home"></i><a href="{{path('admin_home_page')}}">Home</a></li>
              <li><i class="fa fa-bars"></i><a href="{{path('gb_model_index')}}">List All Models</a></li>
            </ol>
          </div>
        </div>
        <!-- page start-->
        <div class="row">

          <div class="col-md-12 col-sm-12 col-md-12">
            <div class="panel-body">
                {# <div id="sendmessage">Your message has been sent. Thank you!</div> #}
                <div id="errormessage"></div>

                {{ form_start(form, {'attr': {'class': 'contactForm lead', 'id': 'purchace_form', 'role': 'form'}}) }}

                {# <form action="" method="post" id="purchace_form" role="form" class="contactForm lead"> #}
                <div class="row">
                    <div class="col-xs-6 col-sm-6 col-md-6">
                        <div class="form-group">
                        <label for="sel1">Choose Make:</label>
                        {{ form_widget(form.make, { 'attr': {'placeholder': 'Car Make'|trans, 'class': 'form-control' }}) }}
                        {{ form_errors(form.make, { 'attr': {'class': 'validation'}} ) }}
                        </div> 
                    </div>                 
                    
                    <div class="col-xs-6 col-sm-6 col-md-6">
                        <div class="form-group">
                        <label for="sel1">Add Model:</label>
                        {{ form_widget(form.mdName, { 'attr': {'placeholder': 'Model'|trans, 'class': 'form-control' }}) }}
                        {{ form_errors(form.mdName, { 'attr': {'class': 'validation'}} ) }}
                        </div> 
                    </div> 

                </div>

                <input type="submit" value="Create" class="btn btn-skin btn-lg">

                {{ form_end(form) }}
       
            </div>
          </div>

        </div>

    <ul>
        <li>
            <a href="{{ path('gb_model_index') }}">Back to the list</a>
        </li>
    </ul>

        <!-- page end-->
      </section>
    </section>
    <!--main content end-->

{% endblock %}
